<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_marginRight">@dimen/fab_hor_margin</item>
        <item name="fabSize">normal</item>
        <item name="useCompatPadding">true</item>
        <item name="elevation">@dimen/normal_fab_elevation</item>
    </style>

    <style name="hint_text_appearance">
        <item name="android:textColor" tools:ignore="PrivateResource">@color/md_grey_500</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/hint_text_size</item>
    </style>

</resources>
